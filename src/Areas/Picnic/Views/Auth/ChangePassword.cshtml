@model Picnic.SimpleAuth.Model.ChangePasswordViewModel

<style type="text/css">
	html, body, .container-table {
		height: 100%;
	}
	.container-table {
		display: table;
	}
	.vertical-center-row {
		display: table-cell;
		vertical-align: middle;
	}

	#Username { height: 35px; }
</style>

<div class="container container-table">
	<div class="row vertical-center-row">
		<div class="text-center col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Change Password</h3>
				</div>
				<div class="panel-body">
					<form asp-controller="Auth" asp-action="ChangePassword">
						<div class="form-group">
							<div class="form-group">
								<label asp-for="Current">Current Password</label>
								<input class="form-control" type="password" placeholder="********" asp-for="Current"/>
								<span asp-validation-for="Current" class="text-danger"></span>
							</div>
							
							<div class="form-group">
								<label asp-for="New">New Password</label>
								<input class="form-control" type="password" placeholder="********" asp-for="New"/>
								<span asp-validation-for="New" class="text-danger"></span>
							</div>
							
							<div class="form-group">
								<label asp-for="Confirm">Confirm New Password</label>
								<input class="form-control" type="password" placeholder="********" asp-for="Confirm"/>
								<span asp-validation-for="Confirm" class="text-danger"></span>
							</div>

							<div class="form-group">
								<div class="col-md-8 col-md-offset-2"><button type="submit" class="form-control btn btn-default">Change Password</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>		
		</div>
	</div>
</div>



