@model Picnic.SimpleAuth.Model.LoginViewModel
@{
	this.Layout = "_CoreLayout";
}

<style type="text/css">
	html, body, .container-table {
		height: 100%;
	}
	.container-table {
		display: table;
	}
	.vertical-center-row {
		display: table-cell;
		vertical-align: middle;
	}

	#Username { height: 35px; }
</style>

<div class="container container-table">
	<div class="row vertical-center-row">
		<div class="text-center col-md-4 col-md-offset-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Login</h3>
				</div>
				<div class="panel-body">
					@Html.Partial("_MessageList")
					<form asp-controller="Auth" asp-action="Login">
						<input type="hidden" asp-for="ReturnUrl" />
						<div class="form-group">
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span> </span> <input class="form-control" placeholder="Username" asp-for="Username"/>
								</div>
								<span asp-validation-for="Username" class="text-danger"></span>
							</div>
							<div class="form-group">
								<div class="input-group">
									<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span> </span> <input class="form-control" placeholder="********" type="password" asp-for="Password"/>
								</div>
								<span asp-validation-for="Password" class="text-danger"></span>
							</div>
							<div class="form-group">
								<div class="col-md-4 col-md-offset-4"><button type="submit" class="form-control btn btn-default">Login</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>		
		</div>
	</div>
</div>



